<!DOCTYPE html>
<html>
  <head>
    <title>Personal Shopper</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <!-- Compiled and minified CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.8/css/materialize.min.css">

    <!-- Compiled and minified JavaScript -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.8/js/materialize.min.js"></script>

    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    </head>

  <body>
    <nav>
        <div class="nav-wrapper cyan lighten-2">
          <ul id="nav-mobile" class="right hide-on-med-and-down ">
            <% if logged_in? %>
              <li><%= link_to "HomePage", root_url  %></li>
              <li><%= link_to "#{current_user.username}", user_path(current_user) %></li>
              <li><%= link_to "Log Out", sessions_path, method: :delete %></li>
            <% else %>
              <li><%= link_to "HomePage", root_url  %></li>
              <li><%= link_to "Create an Account", new_user_path  %></li>
              <li><%= link_to "Log In", new_session_path  %></li>
            <% end %>
          </ul>
        </div>
      </nav>
      <div class="container">
        <%= yield %>
    </div>
  </body>
</html>
